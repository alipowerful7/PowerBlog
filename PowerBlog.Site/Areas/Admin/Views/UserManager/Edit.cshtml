@model User
<div class="row gx-3">
    <div class="col-sm-12">
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="card-title">ویرایش مقاله</h5>
            </div>
            <form method="post" enctype="multipart/form-data" asp-action="PostEdit" asp-controller="UserManager" asp-area="Admin">
                <div class="card-body">
                    <!-- Row starts -->
                    <div class="row gx-3">
                        <div class="col-lg-3 col-sm-4 col-12">
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.FirstName">نام</label>
                                <input type="text" class="form-control" asp-for="@Model.FirstName" placeholder="نام کاربر را وارد کنید" required value="@Model.FirstName">
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-4 col-12">
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.LastName">نام خانوادگی</label>
                                <input type="text" class="form-control" asp-for="@Model.LastName" placeholder="نام خانوادگی کاربر را وارد کنید" required value="@Model.LastName">
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-4 col-12">
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Email">ایمیل</label>
                                <input type="text" class="form-control" asp-for="@Model.Email" placeholder="ایمیل کاربر را وارد کنید" required value="@Model.Email">
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-4 col-12">
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Phone">شماره تلفن</label>
                                <input type="text" class="form-control" asp-for="@Model.Phone" placeholder="شماره تلفن کاربر را وارد کنید" required value="@Model.Phone">
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-4 col-12">
                            <div class="mb-3">
                                <label asp-for="@Model.UserRole" class="form-label">نقش کاربر را انتخاب کنید</label>
                                <select asp-for="@Model.UserRole" class="form-select" aria-label="Default select example">
                                    <option selected disabled>این منوی انتخابی را باز کنید</option>
                                    @foreach (var item in Enum.GetValues(typeof(UserRole)))
                                    {
                                        if ((int)item == (int)Model.UserRole)
                                        {
                                            <option value="@((int)item)" selected>@item</option>
                                        }
                                        else
                                        {
                                            <option value="@((int)item)">@item</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="input-group mb-4">
                            <img src="~/Images/UserImages/@Model.Photo" alt="@($"{Model.FirstName} {Model.LastName}")" />
                            <label class="input-group-text" for="ImageFile">بارگذاری عکس مقاله</label>
                            <input accept=".jpg,.png,.jpeg" type="file" class="form-control" id="ImageFile" name="ImageFile">
                        </div>
                        <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                    </div>
                    <!-- Row ends -->
                </div>
                <div class="card-footer">
                    <div class="d-flex gap-2 justify-content-end">
                        <button type="submit" class="btn btn-primary">ثبت</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>