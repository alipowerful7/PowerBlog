@model Comment
<div class="row gx-3">
    <div class="col-sm-12">
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="card-title">مشاهده جزئیات</h5>
            </div>
            <div class="card-body">
                <!-- Row starts -->
                <div class="row gx-3">
                    <div class="col-lg-3 col-sm-4 col-12">
                        <div class="mb-3">
                            <label class="form-label" asp-for="@Model.Title">عنوان</label>
                            <input type="text" class="form-control" asp-for="@Model.Title" value="@Model.Title" readonly>
                        </div>
                    </div>
                    <div class="col-sm-12 col-12">
                        <div class="mb-3">
                            <label class="form-label" asp-for="@Model.TextBody">متن کامنت</label>
                            <textarea class="form-control" asp-for="@Model.TextBody" value="@Model.TextBody" readonly rows="3"></textarea>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-4 col-12">
                        <div class="mb-3">
                            <label class="form-label" asp-for="@Model.Blog.Title">مقاله</label>
                            <input type="text" class="form-control" asp-for="@Model.Blog.Title" value="@Model.Blog.Title" readonly>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-4 col-12">
                        <div class="mb-3">
                            <label class="form-label" asp-for="@Model.User.UserName">کاربر</label>
                            <input type="text" class="form-control" asp-for="@Model.User.UserName" value="@(Model.User.FirstName+" "+Model.User.LastName)" readonly>
                        </div>
                    </div>
                    <div class="form-check">
                        @if (Model.IsConfirmation)
                        {
                            <input class="form-check-input" type="checkbox" asp-for="@Model.IsConfirmation" checked="checked" disabled>
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" asp-for="@Model.IsConfirmation" disabled>
                        }
                        <label class="form-check-label" asp-for="@Model.IsConfirmation">وضعیت تایید</label>
                    </div>
                </div>
                <!-- Row ends -->
            </div>
            @*<div class="card-footer">
                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Edit" asp-controller="Comment" asp-area="Admin" asp-route-id="@Model.Id" class="btn btn-outline-info">ویرایش</a>
                    </div>
                </div>*@
        </div>
    </div>
</div>