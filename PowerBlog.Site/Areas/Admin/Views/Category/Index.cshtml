@model IEnumerable<Category>
@{
    int counter = 1;
}
<div class="table-responsive">
    <div class="table-outer">
        <table class="table table-striped m-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>عنوان</th>
                    <th>تاریخ ایجاد</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@item.Name</td>
                        <td>@item.CreateDate?.ToString("yyyy/MM/dd")</td>
                        <td>
                            <a asp-action="Details" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-info">جزئیات</a> <a asp-action="Edit" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-warning">ویرایش</a> <a asp-action="Delete" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-danger">حذف</a>
                        </td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>