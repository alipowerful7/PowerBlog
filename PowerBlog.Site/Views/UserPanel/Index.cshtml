@model PowerBlog.Site.Models.ViewModels.UserViewModel
@{
    Layout = "_UserPanelLayout";
}
<div class="row gx-3">
    <div class="col-xl-3 col-sm-6 col-12">
        <div class="card mb-3">
            <div class="card-body">
                <div class="mb-2">
                    <i class="bi bi-book fs-1 text-primary lh-1"></i>
                </div>
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="m-0 fw-normal">کامنت های من</h5>
                    <h3 class="m-0 text-primary">@Model.MyComments</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row gx-3">
    <div class="col-xl-3 col-sm-6 col-12">
        <div class="card mb-3">
            <div class="card-body">
                <div class="mb-2">
                    <i class="bi bi-wallet fs-1 text-primary lh-1"></i>
                </div>
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="m-0 fw-normal">موجودی کیف پول من</h5>
                    <h3 class="m-0 text-primary">@Model.Wallet?.ToString("N0") تومان</h3>
                </div>
            </div>
        </div>
    </div>
</div>